{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": [
        "react"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-var": "error",
        "default-case": "warn",
        "eqeqeq": "warn",
        "curly": "warn",
        "no-lonely-if": "warn",
        "no-console": [
            "error",
            {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ],
        // Disabled from reccommended rules
        "no-case-declarations": "off",
        "react/no-unescaped-entities": "off",
        "react/prop-types": "off",
        "react/jsx-key": "off"
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "16.8.4"
        }
    }
}